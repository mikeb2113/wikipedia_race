<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controllers.CreateLobbyController"
      alignment="CENTER"
      spacing="20"
      prefWidth="600"
      prefHeight="500"
      styleClass="panel">

    <Label text="Create Lobby"
           styleClass="title" />

    <HBox spacing="10"
          alignment="CENTER"
          styleClass="panel">
        <Label text="Lobby Code:" />
        <TextField fx:id="lobbyCodeField"
                   editable="false"
                   prefWidth="150" />
        <Button text="Copy"
                onAction="#handleCopyCode"
                styleClass="secondary-button" />
    </HBox>

    <VBox spacing="8" alignment="CENTER">
        <Label text="Starting Article"
               styleClass="subtitle" />
        <Label fx:id="startArticleLabel"
               styleClass="article-accent" />

        <Label text="Target Article"
               styleClass="subtitle" />
        <Label fx:id="targetArticleLabel"
               styleClass="article-accent" />
    </VBox>

    <VBox spacing="5"
          alignment="CENTER"
          styleClass="panel">
        <Label text="Players"
               styleClass="subtitle" />
        <Label fx:id="hostLabel" />
        <Label text="Waiting for playersâ€¦" />
    </VBox>

    <VBox alignment="CENTER" spacing="10">
        <Button text="Ready"
                onAction="#handleReady"
                styleClass="primary-button" />

        <Button text="Back"
                onAction="#handleBack"
                styleClass="secondary-button" />
    </VBox>

</VBox>
