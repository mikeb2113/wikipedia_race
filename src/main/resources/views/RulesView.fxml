<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.controllers.RulesController"
            prefWidth="600"
            prefHeight="400">

    <top>
        <Label text="How to Play"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER" />
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Overview"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Wikipedia Race is a game where you start on one Wikipedia article and try to reach a target article by clicking links. The goal is to reach the target in as few clicks as possible."
                       wrapText="true" />

                <Label text="Golf Scoring"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Scoring works like golf: fewer clicks is better. Five clicks is considered par. Going under par is excellent; going over par increases your score."
                       wrapText="true" />

                <Label text="Multiplayer Rules"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="In multiplayer mode, players race simultaneously from the same start article to the same target article. The first player to reach the target wins."
                       wrapText="true" />
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button fx:id="backButton" text="Back" onAction="#handleBack" />
        </HBox>
    </bottom>

</BorderPane>
