# Default: store text as LF in the repo
* text=auto eol=lf

# Windows scripts should be CRLF on checkout
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Unix scripts must be LF (or they break)
*.sh   text eol=lf

# Source/code/config stays LF
*.java text eol=lf
*.xml  text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.sql  text eol=lf